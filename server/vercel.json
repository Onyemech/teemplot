{
  "version": 2,
  "name": "teemplot-api",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/dist/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/(.*)",
      "dest": "/dist/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATABASE_TYPE": "postgres"
  },
  "regions": ["iad1"],
  "functions": {
    "dist/index.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
