# Development Environment Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Development Database (Local PostgreSQL or Supabase Dev Project)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/teemplot_dev

# Development Supabase (Optional - use separate dev project)
SUPABASE_URL=https://your-dev-project.supabase.co
SUPABASE_ANON_KEY=your_dev_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_dev_service_role_key

# JWT Secrets (Development - DO NOT use in production)
JWT_ACCESS_SECRET=dev_jwt_access_secret_change_in_production
JWT_REFRESH_SECRET=dev_jwt_refresh_secret_change_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email (Development - use Mailtrap or similar)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your_mailtrap_user
SMTP_PASSWORD=your_mailtrap_password
EMAIL_FROM=dev@teemplot.com

# Paystack (Test Mode)
PAYSTACK_SECRET_KEY=sk_test_xxx
PAYSTACK_PUBLIC_KEY=pk_test_xxx

# Frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_AUTO_CLOCKIN=true
ENABLE_AUTO_CLOCKOUT=true
ENABLE_TASK_REVIEW=true
ENABLE_CONVEX_SYNC=false
